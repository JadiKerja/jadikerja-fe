{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules"]
}
